<?xml version="1.0" encoding="utf-8"?>


<com.gc.modules.customViews.CustomView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical">
    <!--height margin-->
    <com.gc.modules.customViews.CustomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:h="150">

        <com.gc.modules.customViews.CustomView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <com.gc.modules.customViews.CustomImgView
            android:id="@+id/login_closeBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            app:h="70"
            app:img="@drawable/login_close"
            app:imgH="40"
            app:imgW="40"
            app:w="70" />

    </com.gc.modules.customViews.CustomView>

    <com.gc.modules.customViews.CustomImgView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_title"
        app:h="50"
        android:layout_gravity="center"
        />

    <com.gc.modules.customViews.CustomEditText
        android:id="@+id/login_id_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_borderline"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="아이디를 입력해주세요"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/main_color_darkgray"
        app:fontSize="14"
        app:h="50" />

    <!--height margin start-->
    <com.gc.modules.customViews.CustomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:h="13" />
    <!--height margin end-->
    <com.gc.modules.customViews.CustomEditText
        android:id="@+id/login_pw_et"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/edittext_borderline"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="비밀번호를 입력해주세요"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/main_color_darkgray"
        app:fontSize="14"
        app:h="50" />
    <!--height margin start-->
    <com.gc.modules.customViews.CustomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:h="13" />
    <!--height margin end-->
    <!--height margin end-->
    <com.gc.modules.customViews.CustomTextView
        android:id="@+id/lgoin_loginBt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/main_color_skyblue"
        android:gravity="center"
        android:text="로그인"
        android:textColor="@android:color/white"
        app:fontSize="14"
        app:h="50" />


</com.gc.modules.customViews.CustomView>

